{
  "name": "visionboard-adhd-planner",
  "version": "1.0.0",
  "description": "ADHD-friendly time orientation tool (Time Map)",
  "main": "index.html",
  "scripts": {
    "dev": "node scripts/generate-env.js && vite",
    "preview": "vite preview",
    "sync-css": "node scripts/sync-css-links.js",
    "serve": "node scripts/serve-static.js",
    "compile": "esbuild src/app.ts --bundle --outfile=dist/app.js --platform=browser --target=es2020",
    "compile:css": "esbuild styles/main.css --bundle --outfile=dist/styles.css --minify",
    "watch:ts": "esbuild src/app.ts --bundle --outfile=dist/app.js --watch",
    "build": "node scripts/generate-env.js && vite build && npm run copy-static",
    "build:purge": "node scripts/generate-env.js && PURGE_CSS=1 vite build && npm run copy-static",
    "copy-static": "cp env.js dist/ && cp sw.js dist/ && cp manifest.webmanifest dist/ && cp -r icons dist/",
    "images:optimize": "python3 scripts/optimize-pngs.py",
    "minify-js": "terser dist/app.js -o app.min.js --compress --mangle",
    "concat-css": "node scripts/concat-css.js",
    "minify-css": "npm run concat-css && cleancss -o styles.bundle.min.css styles.bundle.css",
    "optimize-html": "html-minifier-terser --collapse-whitespace --remove-comments --minify-css --minify-js -o dist/index.html index.html",
    "test": "jest",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "compile:css:test": "esbuild styles/main.css --bundle --outfile=dist/app.css --target=es2020",
    "test:serve": "node scripts/generate-env.js --force-empty && npm run compile && npm run compile:css:test && node scripts/serve-static.js --port=4173",
    "test:e2e": "playwright test",
    "test:all": "npm run test:unit && npm run test:e2e",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" playwright.config.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "security:scan": "node scripts/security-scan.js",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "visual:run": "node scripts/visual-regression.js run",
    "visual:update-baseline": "node scripts/visual-regression.js update-baseline",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "backup": "node scripts/backup.js",
    "deploy": "npm run build && npm run backup",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --max-warnings=0"
    ],
    "tests/**/*.{ts,tsx}": [
      "eslint --max-warnings=0"
    ],
    "playwright.config.ts": [
      "eslint --max-warnings=0"
    ]
  },
  "keywords": [
    "adhd",
    "planner",
    "productivity",
    "vision-board",
    "neurodivergent"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@playwright/test": "^1.57.0",
    "@storybook/html-vite": "^10.1.11",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "axe-core": "^4.11.0",
    "clean-css-cli": "^5.6.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.42.0",
    "eslint-plugin-security": "^3.0.1",
    "fake-indexeddb": "^6.2.5",
    "html-minifier-terser": "^7.2.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.7",
    "madge": "^8.0.0",
    "postcss": "^8.5.6",
    "storybook": "^10.1.11",
    "terser": "^5.19.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  },
  "dependencies": {
    "@sentry/browser": "^10.36.0",
    "@supabase/supabase-js": "^2.89.0",
    "dompurify": "^3.3.1",
    "idb": "^7.1.1",
    "zod": "^3.25.76"
  }
}
