{
  "name": "visionboard-adhd-planner",
  "version": "1.0.0",
  "description": "ADHD-friendly time orientation tool (Time Map)",
  "main": "index.html",
  "scripts": {
    "dev": "node scripts/generate-env.js && npm run compile && node scripts/serve-static.js --port=8080",
    "compile": "esbuild src/app.ts --bundle --outfile=dist/app.js --platform=browser --target=es2020",
    "watch": "esbuild src/app.ts --bundle --outfile=dist/app.js --watch",
    "build": "node scripts/clean-build.js && npm run compile && npm run minify-js && npm run minify-css && npm run optimize-html && node scripts/generate-env.js && node scripts/prepare-public.js",
    "minify-js": "terser dist/app.js -o app.min.js --compress --mangle",
    "concat-css": "node scripts/concat-css.js",
    "minify-css": "npm run concat-css && cleancss -o styles.bundle.min.css styles.bundle.css",
    "optimize-html": "html-minifier-terser --collapse-whitespace --remove-comments --minify-css --minify-js -o dist/index.html index.html",
    "test": "jest",
    "test:unit": "jest",
    "test:serve": "node scripts/generate-env.js --force-empty && npm run compile && node scripts/serve-static.js --port=4173",
    "test:e2e": "playwright test",
    "test:all": "npm run test:unit && npm run test:e2e",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" playwright.config.ts",
    "backup": "node scripts/backup.js",
    "deploy": "npm run build && npm run backup"
  },
  "keywords": [
    "adhd",
    "planner",
    "productivity",
    "vision-board",
    "neurodivergent"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@playwright/test": "^1.57.0",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "clean-css-cli": "^5.6.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.42.0",
    "fake-indexeddb": "^6.2.5",
    "html-minifier-terser": "^7.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.1",
    "terser": "^5.19.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "idb": "^7.1.1"
  }
}
