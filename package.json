{
  "name": "visionboard-adhd-planner",
  "version": "1.0.0",
  "description": "ADHD-friendly time orientation tool (Time Map)",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --host=127.0.0.1 --port=8080 --open=/index.html",
    "build": "npm run minify-js && npm run minify-css && npm run optimize-html",
    "minify-js": "terser app.js -o app.min.js --compress --mangle",
    "minify-css": "cleancss -o styles.min.css styles.css",
    "optimize-html": "html-minifier --collapse-whitespace --remove-comments --minify-css --minify-js --output-dir dist index.html",
    "test": "jest",
    "lint": "eslint app.js",
    "backup": "node scripts/backup.js",
    "deploy": "npm run build && npm run backup"
  },
  "keywords": ["adhd", "planner", "productivity", "vision-board", "neurodivergent"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "live-server": "^1.2.2",
    "terser": "^5.19.0",
    "clean-css-cli": "^5.6.0",
    "html-minifier": "^4.0.0"
  },
  "dependencies": {
    "idb": "^7.1.1"
  }
}
