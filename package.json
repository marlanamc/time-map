{
  "name": "visionboard-adhd-planner",
  "version": "1.0.0",
  "description": "ADHD-friendly time orientation tool (Time Map)",
  "main": "index.html",
  "scripts": {
    "dev": "npm run compile && live-server --host=127.0.0.1 --port=8080 --open=/index.html",
    "compile": "esbuild src/app.ts --bundle --outfile=dist/app.js --platform=browser --target=es2020",
    "watch": "esbuild src/app.ts --bundle --outfile=dist/app.js --watch",
    "build": "npm run compile && npm run minify-js && npm run minify-css && npm run optimize-html",
    "minify-js": "terser dist/app.js -o app.min.js --compress --mangle",
    "minify-css": "cleancss -o styles.min.css styles.css",
    "optimize-html": "html-minifier --collapse-whitespace --remove-comments --minify-css --minify-js -o dist/index.html index.html",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "backup": "node scripts/backup.js",
    "deploy": "npm run build && npm run backup"
  },
  "keywords": [
    "adhd",
    "planner",
    "productivity",
    "vision-board",
    "neurodivergent"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@types/node": "^25.0.3",
    "clean-css-cli": "^5.6.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.42.0",
    "html-minifier": "^4.0.0",
    "jest": "^29.5.0",
    "live-server": "^1.2.2",
    "terser": "^5.19.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "idb": "^7.1.1"
  }
}